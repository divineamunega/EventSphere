// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  fullName      String
  email         String    @unique
  contactNumber String
  username      String    @unique
  password      String
  role          Role      @default(PARTICIPANT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  organizedEvents Event[] @relation("OrganizerEvents")
  registrations   Registration[]
}

enum Role {
  PARTICIPANT
  ORGANIZER
  ADMIN
}

model Event {
  id          String          @id @default(uuid())
  title       String
  description String
  category    String
  date        DateTime
  venue       String
  capacity    Int
  location    Json?
  mainImage   String?
  status      EventStatus     @default(PENDING)
  createdAt   DateTime        @default(now())

  organizer   User            @relation("OrganizerEvents", fields: [organizerId], references: [id])
  organizerId String
  registrations Registration[]
}

enum EventStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

model Registration {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([eventId, userId]) 
}

model Session {
  sid    String   @id           @db.VarChar(255)
  sess   Json
  expire DateTime

  @@map("session")              // match exact table name "session"
}